.shoppingcart-group-item{
  padding: 10rpx 10rpx;
  display: flex;
  justify-content: space-evenly;
  font-size: 25rpx;
}

.shoppingcart-group-item .item-name{
  margin-top: 40rpx; 
}

.shoppingcart-group-item .item-price{
  margin-top: 40rpx;
}

.shoppingcart-group-item .item-image image{
  height: 135rpx;
  width: 135rpx;
}

.shoppingcart-group-item .stepper-group{
  margin-top: 30rpx; 
}

.stepper {
	width: 80px;
	height: 26px;
	/*给主容器设一个边框*/
	border: 1px solid #ccc;
	border-radius: 3px;
  margin-left: 10rpx;
}

.stepper .stepper-text{
  font-size: 30rpx;
}
 
/*加号和减号*/
.stepper text {
	width: 19px;
	line-height: 26px;
	text-align: center;
	float: left;
}
 
/*数值*/
.stepper input {
	width: 40px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}
 
/*普通样式*/
.stepper .normal{
	color: black;
}
 
/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

.operation-group{
  position:fixed; 
  bottom:0;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  border-top: solid 0.3rpx gray;
  background-color: lightgray;  
}

.operation-group .clear{
  margin-left: 50rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

.operation-group .place-on-order{
  border: solid 3rpx;
  border-radius: 12rpx;
  background-color: #FF4500;
  font-size: 35rpx;
  color: white;
  padding: 10rpx 20rpx;
}