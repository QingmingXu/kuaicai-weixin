/* pages/de tail/de tail.wxss */
.detail-group{
  padding-top: 35rpx;
  padding-left: 25rpx; 
}

.detail-group .thumbnail-group{
  margin-left: 35rpx;
  margin-bottom: 20rpx;
}

.detail-group .thumbnail-group image{
  height: 350rpx;
  width: 500rpx;
}

.detail-group .text-group{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.detail-group .text-group .right{
  margin-right: 20rpx;
}

.detail-group .menu-info-title{
  font-size: 23rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.detail-group .menu-info{
  font-size: 30rpx;
}

.detail-group .stepper-group{
  display: flex;
  margin-top: 330rpx;
}

.detail-group .stepper-group .stepper-title{
  font-size: 30rpx;
  margin-top: 6rpx; 
}

.stepper {
	width: 80px;
	height: 26px;
	/*给主容器设一个边框*/
	border: 1px solid #ccc;
	border-radius: 3px;
  margin-left: 10rpx;
}

.stepper .stepper-text{
  font-size: 30rpx;
}
 
/*加号和减号*/
.stepper text {
	width: 19px;
	line-height: 26px;
	text-align: center;
	float: left;
}
 
/*数值*/
.stepper input {
	width: 40px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}
 
/*普通样式*/
.stepper .normal{
	color: black;
}
 
/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

.buy-way-group{
  margin-top: 20rpx;
  display: flex;
}

.buy-way-group .buy-now{
  border: solid 3rpx;
  border-radius: 12rpx;
  background-color: #FA8072;
  font-size: 35rpx;
  color: darkred;
  padding: 13rpx 13rpx;
}

.buy-way-group .put-in-car{
  margin-left: 20rpx;
  border: solid 3rpx;
  border-radius: 12rpx;
  background-color: #FF4500;
  font-size: 35rpx;
